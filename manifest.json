{
  "name": "hideOff",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension will help you hide content you don't want to see anymore",
  "homepage_url": "https://github.com/avipinto/hideOff",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "options_page": "src/options/index.html",
  "background": {
    "scripts": ["src/background/background.js"]
  },
  "page_action": {
    "default_icon": {                  
      "19": "icons/sun19.png"         
    },
    "default_title": "Clear hideOff"      // optional; shown in tooltip
  },
  "permissions": [
    "storage",
    "contextMenus", 
    "unlimitedStorage", 
    "http://*/*", 
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
         "*://*/*"
      ],
      "css": [
        "src/inject/inject.css"
      ],
      "all_frames": true
    },
    {
      "matches": [
         "*://*/*"
      ],
      "js": [
        "src/inject/inject.js", 
        "js/jquery/jquery.js",
        "js/mutation-summary.js",
        "js/repository.js"
      ],
      "all_frames": true
    }
  ]
}